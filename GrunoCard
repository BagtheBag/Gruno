package GrunoPackage;

public class GrunoCard{
  
  /** initilising all uno colours*/
  public final int BLUE = 0;
  public final int YELLOW = 1;
  public final int RED = 2;
  public final int GREEN = 3;
  public final int BLACK = 4;
  public final int WHITE = 5;
  public final String[] cardColourArray= {"Blue", "Yellow", "Red", "Green", "Black", "White"};
  
  /** initilising all uno symbols*/
  public final int ZERO = 0;
  public final int ONE = 1;
  public final int TWO = 2;
  public final int THREE = 3;
  public final int FOUR = 4;
  public final int FIVE = 5;
  public final int SIX = 6;
  public final int SEVEN = 7;
  public final int EIGHT = 8;
  public final int NINE = 9;
  public final int REVERSE = 10;
  public final int SKIP = 11;
  public final int PLUSTWO = 12;
  public final int WILD = 13;
  public final int PLUSFOUR = 14;
  
  //extra cards for specific sets of uno cards
  public final int BLANK = 15;
  public final int PLUSONE = 16;
  
  public final String[] cardNumberArray = {"Zero", "One", "Two", "Three", "Four", "Five", "Six", "Seven", "Eight", "Nine", "Reverse",
    "Skip", "Plus Two", "Wild", "Plus Four", "Blank", "Plus One"};
  
  private int cardNumber;
  private int cardColour;
  
  public GrunoCard(int cardNumber, int cardColour){
    this.cardNumber = cardNumber;
    this.cardColour = cardColour;
  }
  
  public String toString(){
    return "Card: " + cardNumberArray[cardNumber] + " " + cardColourArray[cardColour];
  }
  
  
  
  
  
}//end GrunoCard
